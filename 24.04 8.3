from PIL import Image

# Создание словаря с праздниками и открытками
holiday_cards = {
    'Новый год': 'new_year_card.jpg',
    'Рождество': 'christmas_card.jpg',
    'День рождения': 'birthday_card.jpg'
}

# Запрос у пользователя
holiday = input("К какому празднику вам нужна открытка? ")

# Вывод открытки на экран
if holiday in holiday_cards:
    card_image = Image.open(holiday_cards[holiday])
    card_image.show()
else:
    print("Открытка для данного праздника не найдена.")
